modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "gcc", "ghostscript", "glibc", "glibcLocales", "gnumake", "gobject-introspection", "gtk3", "libstdcxx5", "libxcrypt", "openssl", "patchelf", "pkg-config", "postgresql", "qhull", "tcl", "tk", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:2222", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:2222 --reuse-port --reload main:app"
waitForPort = 2222

[[ports]]
localPort = 2222
externalPort = 80
